---
export const prerender = true;

import BaseLayout from '../../layouts/BaseLayout.astro';
import CardGrid from '../../components/CardGrid.astro';
import { readdir, readFile } from 'fs/promises';
import { join } from 'path';
import matter from 'gray-matter';

const adaptiveDir = join(process.cwd(), 'content', 'adaptive');
const files = (await readdir(adaptiveDir)).filter(f => f.endsWith('.md'));

const sports = await Promise.all(
  files.map(async (file) => {
    const content = await readFile(join(adaptiveDir, file), 'utf-8');
    const { data } = matter(content);
    return {
      id: file.replace('.md', ''),
      slug: data.slug || file.replace('.md', ''),
      data: {
        title: data.title,
        image: data.image,
        summary: data.summary,
        body: '',
        external_url: data.external_url,
        category: 'aangepast',
      },
      category: 'aangepast' as const,
    };
  })
);

const sorted = sports.sort((a, b) => a.data.title.localeCompare(b.data.title, 'nl'));
---

<BaseLayout 
  title="Aangepaste sporten"
  description="Overzicht van alle aangepaste sporten in Hengelo voor mensen met een beperking."
>
  <section class="py-12 bg-gradient-to-br from-secondary to-primary text-white">
    <div class="container mx-auto px-4">
      <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold mb-4 break-words">Aangepaste sporten</h1>
      <p class="text-lg sm:text-xl text-white/90 break-words">
        Kies een aangepaste sport die bij u past. Op elke sportpagina vindt u informatie over de sport en een overzicht van alle aanbieders en verenigingen in Hengelo.
      </p>
    </div>
  </section>

  <CardGrid sports={sorted} />
</BaseLayout>
