---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout 
  title="Pagina niet gevonden"
  description="De pagina die je zoekt bestaat niet."
  noindex={true}
>
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-2xl mx-auto text-center">
        <h1 class="text-6xl font-bold text-text mb-4">404</h1>
        <p class="text-xl text-text-light mb-8">
          De pagina die je zoekt bestaat niet.
        </p>
        <a 
          href="/"
          class="inline-block bg-primary text-white px-6 py-3 rounded-md font-semibold hover:bg-primary/90 transition-colors"
        >
          Terug naar home
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

